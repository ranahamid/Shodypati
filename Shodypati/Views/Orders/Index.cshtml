@model IEnumerable<Shodypati.Models.OrderMobile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Orders list</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
            <th>@Html.DisplayNameFor(model => model.CustomerPhone)</th>
            <th>@Html.DisplayNameFor(model => model.OrderStatus)</th>
            <th>@Html.DisplayNameFor(model => model.ShippingMethod)</th>
            <th>@Html.DisplayNameFor(model => model.TotalProductPrice)</th>
            <th>@Html.DisplayNameFor(model => model.ShippingPrice)</th>
            <th>@Html.DisplayNameFor(model => model.TotalPriceAfterShipping)</th>
            <th>@Html.DisplayNameFor(model => model.OrderDiscountPrice)</th>
            <th>@Html.DisplayNameFor(model => model.TotalPriceAfterShippingAndDiscount)</th>
            <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.PickUpInStore)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
            <td>@Html.DisplayFor(modelItem => item.CustomerPhone)</td>
            <td>@Html.DisplayFor(modelItem => item.OrderStatus)</td>
            <td>@Html.DisplayFor(modelItem => item.ShippingMethod)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalProductPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.ShippingPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalPriceAfterShipping)</td>
            <td>@Html.DisplayFor(modelItem => item.OrderDiscountPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalPriceAfterShippingAndDiscount)</td>
            <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
            <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
            <td>@Html.DisplayFor(modelItem => item.PickUpInStore)</td>     
        </tr>
}
    </tbody>
</table>
