@model IEnumerable<Shodypati.Models.OrderPaymentMethod>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instructions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstructionsImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Published)
        </th>

    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructions)
            </td>
            <td>

                @{
                    if (!string.IsNullOrEmpty(item.InstructionsImageUrl))
                    {
                        <a href="@item.InstructionsImageUrl" data-lightbox="image-1" data-title="@item.Name">
                            <img src="@item.InstructionsImageUrl" class="img-display"/>
                        </a>
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>

        </tr>
    }
    </tbody>
</table>