@model IEnumerable<Shodypati.Models.Doctor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th> @Html.DisplayNameFor(model => model.ClinicHospitalName)</th>
            <th>@Html.DisplayNameFor(model => model.Designation)</th>

            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.CanVisitDays)</th>
            <th>@Html.DisplayNameFor(model => model.VisitTimeStart)</th>
            <th>@Html.DisplayNameFor(model => model.VisitTimeEnd)</th>
            <th>@Html.DisplayNameFor(model => model.VisitFee)</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                <td> @Html.DisplayFor(modelItem => item.FullName)</td>
                <td> @Html.DisplayFor(modelItem => item.ClinicHospitalName)</td>
                <td>@Html.DisplayFor(modelItem => item.Designation)</td>
         
                <td> @Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td> @Html.DisplayFor(modelItem => item.SelectedVisitDaysStr)</td>
                <td> @Html.DisplayFor(modelItem => item.VisitTimeStart)</td>
                <td> @Html.DisplayFor(modelItem => item.VisitTimeEnd)</td>
                <td> @Html.DisplayFor(modelItem => item.VisitFee) </td>
            </tr>
        }
    </tbody>
</table>
