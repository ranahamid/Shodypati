@model IEnumerable<Shodypati.Models.Merchant>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name_English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name_Bangla)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOnUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedOnUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Published)
        </th>


    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_English)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_Bangla)
            </td>
            <td>
                <a href="@item.URL">@item.URL</a>
            </td>
            <td>
                <img src="@item.Logo" class="img-display"/>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOnUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedOnUtc)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Published)


        </tr>
    }
    </tbody>
</table>